---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';

interface Props {
	title: string;
	description?: string;
	ogImage?: string;
}

const { title,
		description = "Explore the digital portfolio of Antonio Almeida, a designer with a Bachelor's from Billy Blue College, featuring projects for Aristocrat, OzHarvest, and WICKED.",
		ogImage = "images/work-oz-harvest-og.jpg" 
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL.replace(/\/?$/, "/")}favicon.svg`} />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:image" content={ogImage}/>		
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">		
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
		<Footer />
	</body>
</html>

<style lang="scss" is:global>
	:root {
		--background: #F6F5F5;
		--text-color: #191919;
		--grey: #E5E5E5;	
		
		--space-xsm: .75rem;
		--space-sm: 1rem;	
		--space-md: 1.5rem;	
		--space-lg: 3.5rem;
		
		--border-radius: .25rem;
		
		@media (min-width: 992px) {
			--space-xsm: 1rem;
			--space-sm: 1.5rem;	
			--space-md: 3rem;	
			--space-lg: 7rem;
			--border-radius: 1rem;
		}
	}
	
	html{
		background: var(--background);
		font-family: "Inter", sans-serif;
  		font-optical-sizing: auto;
  		font-weight: 500;
  		font-style: normal;
  		font-variation-settings: "slnt" 0;	
	}
	
	html,
	body{
		margin: 0;
	}

	/* Typo */
	h1,
	h2,
	h3{
		font-weight: 500;
		line-height: 1.3;
		margin:0;	
	}		
	
	h2,
	.h2 {
		font-size: 1.5rem;								
		
		@media (min-width: 992px) {
			font-size: 3rem;
		}		
	}
	
	h3,
	.h3 {
		font-size: 1rem;								
		
		@media (min-width: 992px) {
			font-size: 1.5rem;
		}
	}
	
	p,
	li{		
		margin:0;		
		line-height: 1.5;
		@media (min-width: 992px) {
			font-size: 1.5rem;
		}		
	}	

	p+h2{
		margin-top: .5rem;
	}
	
	a{
		text-decoration: none;
		color: inherit;		
	}
	
	/* Image */
	img{		
		max-width: 100%;
		height: auto;		
	}

	.image-wrapper{
		display: flex;
		flex-direction: column;
		gap: var(--space-sm);
	}
	
	.image-frame {
		background-color: var(--grey);		
		overflow: hidden;
		padding: 10%;			
		border-radius: var(--border-radius);
	}

	.image-group {        
        display: grid;
        grid-template-columns: 1fr 1fr;         
        gap: var(--space-sm);

		img{
			border-radius: var(--border-radius);
		}
    }

	/* Layout */
	.wrapper{
		margin: 0 1rem;	
		@media (min-width: 992px) {
			margin: 0 6rem;		
		}
	}

	ul{
		margin: 0;		
	}
	
</style>
