---
import Header from '../components/Header.astro';

interface Props {
	title: string;
	description?: string;
	ogImage?: string;
}

const { title,
		description = "Explore the digital portfolio of Antonio Almeida, a designer with a Bachelor's from Billy Blue College, featuring projects for Aristocrat, OzHarvest, and WICKED.",
		ogImage = "images/work-oz-harvest-og.jpg" 
} = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta property="og:image" content={ogImage}/>		
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">		
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--background: #F6F5F5;
		--text-color: #191919;
		--grey: #E5E5E5;	
		
		--space-xsm: .75rem;
		--space-sm: 1rem;	
		--space-md: 1.5rem;	
		--space-lg: 4rem;		
		
		@media (min-width: 992px) {
			--space-xsm: 1rem;
			--space-sm: 1.5rem;	
			--space-md: 3rem;	
			--space-lg: 7.5rem;
		}
	}
	
	html{
		background: var(--background);
		font-family: "Inter", sans-serif;
  		font-optical-sizing: auto;
  		font-weight: 500;
  		font-style: normal;
  		font-variation-settings: "slnt" 0;	
	}
	
	html,
	body{
		margin: 0;
	}

	/* Typo */
	h1,
	h2,
	h3,
	p{
		font-weight: 500;
		line-height: 1.3;
		margin:0;	
	}		
	
	h2,
	.h2 {
		font-size: 1.5rem;								
		
		@media (min-width: 992px) {
			font-size: 3rem;
		}		
	}
	
	h3,
	.h3 {
		font-size: 1rem;								
		@media (min-width: 992px) {
			font-size: 1.5rem;
		}
	}
	
	p,
	li{		
		@media (min-width: 992px) {
			font-size: 1.5rem;
		}		
	}	
	
	a{
		text-decoration: none;
		color: inherit;		
	}
	
	/* Image */
	img{
		max-width: 100%;
		height: auto;		
	}

	/* Layout */
	.wrapper{
		margin: 0 1rem;	
		@media (min-width: 992px) {
			margin: 0 6rem;		
		}
	}

</style>
