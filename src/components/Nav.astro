<nav>
  <a href="https://www.linkedin.com/in/antonioal/" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 256 256" fill="currentColor" aria-hidden="true">
      <path d="M216,24H40A16,16,0,0,0,24,40V216a16,16,0,0,0,16,16H216a16,16,0,0,0,16-16V40A16,16,0,0,0,216,24Zm0,192H40V40H216V216ZM96,112v64a8,8,0,0,1-16,0V112a8,8,0,0,1,16,0Zm88,28v36a8,8,0,0,1-16,0V140a20,20,0,0,0-40,0v36a8,8,0,0,1-16,0V112a8,8,0,0,1,15.79-1.78A36,36,0,0,1,184,140ZM100,84A12,12,0,1,1,88,72,12,12,0,0,1,100,84Z"/>
    </svg>
  </a>
  <div class="email-wrap">
    <button id="email-nav" aria-label="Copy email address">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 256 256" fill="currentColor" aria-hidden="true">
        <path d="M224,48H32a8,8,0,0,0-8,8V192a16,16,0,0,0,16,16H216a16,16,0,0,0,16-16V56A8,8,0,0,0,224,48ZM203.43,64,128,133.15,52.57,64ZM216,192H40V74.19l82.59,75.71a8,8,0,0,0,10.82,0L216,74.19V192Z"/>
      </svg>
    </button>
    <span class="copied-bubble" id="copied-bubble">Copied</span>
  </div>
</nav>

<script>
  document.getElementById('email-nav')?.addEventListener('click', () => {
    navigator.clipboard.writeText('me.antonio7@gmail.com').catch(() => {});
    const bubble = document.getElementById('copied-bubble');
    if (!bubble) return;
    bubble.classList.remove('show');
    void bubble.offsetWidth; // reflow to restart animation
    bubble.classList.add('show');
  });
</script>

<style>
  nav {
    position: absolute;
    top: var(--section-gap);
    right: var(--page-padding);
    display: flex;
    gap: 16px;
    align-items: center;
  }

  nav a,
  nav button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 32px;
    height: 32px;
    color: var(--color-fg);
    cursor: pointer;
    background: var(--color-hover-bg);
  }

  nav button {
    border: none;
    padding: 0;
  }

  .email-wrap {
    position: relative;
  }

  .copied-bubble {
    position: absolute;
    bottom: calc(100% + 8px);
    left: 50%;
    transform: translateX(-50%);
    background: var(--color-fg);
    color: var(--color-bg);
    font-family: var(--font-sans);
    font-weight: var(--weight-regular);
    font-size: 13px;
    line-height: 1;
    padding: 6px 10px;
    white-space: nowrap;
    pointer-events: none;
    opacity: 0;
  }

  .copied-bubble.show {
    animation: bubble 1.8s ease forwards;
  }

  @keyframes bubble {
    0%   { opacity: 0; transform: translateX(-50%) translateY(4px); }
    15%  { opacity: 1; transform: translateX(-50%) translateY(0); }
    70%  { opacity: 1; transform: translateX(-50%) translateY(0); }
    100% { opacity: 0; transform: translateX(-50%) translateY(-4px); }
  }
</style>
