---
interface Props {
  title: string;
  description: string;
  slug: string;
  coverImage?: string;
  thumbBg?: string;
}

const { title, description, slug, coverImage, thumbBg } = Astro.props;
const bg = thumbBg ?? 'var(--color-divider)';
---

<article class="project-card">
  <a href={`/project/${slug}`} class="card-link" aria-label={`See the work: ${title}`}>
    <div class="thumb" style={`background-color: ${bg};`}>
      {coverImage && (
        <img src={coverImage} alt="" aria-hidden="true" loading="lazy" />
      )}
    </div>
    <div class="body">
      <h3>{title}</h3>
      <div class="content">
        <p>{description}</p>
        <span class="see-work" aria-hidden="true">See the work</span>
      </div>
    </div>
  </a>
</article>

<style>
  .project-card {
    width: 384px;
    flex-shrink: 0;
  }

  .card-link {
    display: flex;
    flex-direction: column;
    gap: 25px;
    text-decoration: none;
    color: inherit;
  }

  .thumb {
    position: relative;
    width: 100%;
    height: 216px;
    overflow: hidden;
    border-radius: 4px;
  }

  .thumb img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .body {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  h3 {
    font-family: var(--font-sans);
    font-weight: var(--weight-medium);
    font-size: 28px;
    line-height: 1.1;
    color: var(--color-fg);
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 0;
    align-items: flex-start;
  }

  p {
    font-family: var(--font-serif);
    font-weight: var(--weight-regular);
    font-size: 20px;
    line-height: 1.8;
    color: var(--color-fg);
  }

  .see-work {
    display: inline;
    font-family: var(--font-serif);
    font-weight: var(--weight-regular);
    font-size: 20px;
    line-height: 1.8;
    color: var(--color-accent);
    border-bottom: 1px solid var(--color-accent);
  }
</style>
