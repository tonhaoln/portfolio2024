---
interface Props {
  title: string;
  description: string;
  slug: string;
  coverImage?: string;
}

const { title, description, slug, coverImage } = Astro.props;
---

<article class="project-card">
  <a href={`/project/${slug}`} class="card-link" aria-label={`See the work: ${title}`}>
    <div class="thumb">
      {coverImage && (
        <img src={coverImage} alt="" aria-hidden="true" loading="lazy" />
      )}
    </div>
    <div class="body">
      <h3>{title}</h3>
      <div class="content">
        <p>{description}</p>
        <span class="see-work" aria-hidden="true">See the work</span>
      </div>
    </div>
  </a>
</article>

<style>
  .project-card {
    width: calc((var(--content-width) - var(--col-gap)) / 2);
  }

  .card-link {
    display: flex;
    flex-direction: column;
    gap: var(--col-gap);
    text-decoration: none;
    color: inherit;
  }

  .thumb {
    position: relative;
    width: 100%;
    aspect-ratio: 16 / 9;
    overflow: hidden;
  }

  .thumb img {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .body {
    display: flex;
    flex-direction: column;
    gap: var(--item-gap);
  }

  h3 {
    font-family: var(--font-sans);
    font-weight: var(--weight-medium);
    font-size: 28px;
    line-height: 1.1;
    color: var(--color-fg);
  }

  .content {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  p {
    font-family: var(--font-serif);
    font-weight: var(--weight-regular);
    font-size: 20px;
    line-height: 1.8;
    color: var(--color-fg);
  }

  .see-work {
    display: inline;
    font-family: var(--font-serif);
    font-weight: var(--weight-regular);
    font-size: 20px;
    line-height: 1.8;
    color: var(--color-accent);
    border-bottom: 1px solid var(--color-accent);
  }

  @media (max-width: 768px) {
    .project-card {
      width: 100%;
    }
  }
</style>
