---
import { type CollectionEntry } from "astro:content";
import { Image } from "astro:assets";
import Icons from "../components/Icons.astro";

type Props = {
    post: CollectionEntry<"posts">;
};

const { post } = Astro.props;
---

<article> 
    <a href={`/work/${post.slug}`}>
        
        <div class="image-frame">
            <Image
                src={post.data.thumb}
                width={1014}
                height={1014 / 1.6}
                alt={post.data.title}
            />
        </div>
        
        <div class="cats">
            {post.data.category}
        </div>
        
        <h3>{post.data.title}</h3>
        
        <div class="view-work">
            View work <Icons name="arrow-right" />
        </div>
    </a>
</article>

<style>
    article{
        
        a{
            display: flex;
			flex-direction: column;
			gap: var(--space-sm);
                        
            img{
                transition: transform .3s ease;                
            }

            .cats,
			.view-work {
				font-size: 1rem;
				display: flex;
				line-height: 1.2;
				gap: 0.5rem;
			}

            .view-work {
				&:hover {
					color: #6941c6;

					svg path {
						stroke: #6941c6;
					}
				}
			}

            &:hover {
                img {
                    transform: scale(1.05);
                }
            }
        }        
    }    
</style>
